@model List<ProductModel>

@{
    ViewData["Title"] = "Product List";
}

<h2>Product List</h2>

<form asp-action="Save" method="post">
    <table border = "1">
        <thead>
            <tr>
                <th>Name</th>
                <th>Unit</th>
                <th>Quantity</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        <input type="text" asp-for="@Model[i].Name"/>
                        <span asp-validation-for="@Model[i].Name" class="text-danger"></span>
                    </td>
                    <td>
                        <select asp-for="@Model[i].Unit">
                            <option value="1">Kg</option>
                            <option value="2">Litre</option>
                            <option value="3">Pound</option>
                        </select>
                        <span asp-validation-for="@Model[i].Unit" class="text-danger"></span>
                    </td>

                    <td><input type="number" asp-for="@Model[i].Quantity"/></td>
                    <td><textarea asp-for="@Model[i].Description"></textarea></td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="Save" />
</form>